document.addEventListener('DOMContentLoaded', () => {
    const chessBoard = document.getElementById('chess-board');
    const flipButton = document.getElementById('flip-button');
    let isFlipped = false;

    // Function to create chessboard squares
    const createChessBoard = () => {
        chessBoard.innerHTML = ''; // Clear the board
        const squares = [];

        for (let i = 0; i < 64; i++) {
            const square = document.createElement('div');
            square.classList.add('square');
            // Check if the square should be black or white based on position
            const isWhite = Math.floor(i / 8) % 2 === 0 ? i % 2 === 0 : i % 2 !== 0;
            square.classList.add(isWhite ? 'white' : 'black');
            square.dataset.index = i;

            // Add click event listener to each square
            square.addEventListener('click', () => {
                alert(`Square clicked: ${i}`);
            });

            squares.push(square);
        }

        // Append the squares to the board
        squares.forEach(square => chessBoard.appendChild(square));
    };

    // Function to flip the board
    const flipBoard = () => {
        isFlipped = !isFlipped;
        chessBoard.style.transform = isFlipped ? 'rotate(180deg)' : 'rotate(0deg)';
    };

    // Set up the flip button event
    flipButton.addEventListener('click', flipBoard);

    // Initialize the chessboard
    createChessBoard();
});
